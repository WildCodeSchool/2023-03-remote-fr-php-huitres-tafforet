{% extends 'layout.html.twig' %}


{% block title %}Produits
{% endblock %}

{% block content %}

	<h1 class="title_page_product">
		Les Huîtres Tafforet
	</h1>
	<table>
		<thead>
			<tr>
				<th scope="col">Appelation Ph + couvercle</th>
				<th scope="col">Densité par m2</th>
				<th scope="col">Durée d'affinage</th>
				<th scope="col">Taux de chair</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th scope="row">Fine de Claires</th>
				<td>Du 1/04 au 31/10 : 1kg
					<br>
					Du 1/11 au 31/03 : 3kg</td>
				<td>Du 1/04 au 31/10 : 14 jours
					<br>
					Du 1/11 au 31/03 : 28 jours</td>
				<td>entre 7 et 10,5</td>
			</tr>
			<tr>
				<th scope="row">Spéciale de Claires</th>
				<td>Du 1/04 au 31/10 : 1kg
					<br>
					Du 1/11 au 31/03 : 3kg</td>
				<td>Du 1/04 au 31/10 : 14 jours
					<br>
					Du 1/11 au 31/03 : 28 jours</td>
				<td>
					> 10,5.
				</td>
			</tr>
			<tr>
				<th scope="row">Pousse en clair</th>
				<td>5 huîtres au m2</td>
				<td>4 mois minimum</td>
				<td>
					> 12
				</td>
			</tr>
			<tr class="line_table">
				<th scope="row">Label Rouge (verdissement)</th>
				<td>Du 1/04 au 31/10 : 1kg
					<br>
					Du 1/11 au 31/03 : 3kg</td>
				<td>Du 1/04 au 31/10 : 14 jours
					<br>
					Du 1/11 au 31/03 : 28 jours</td>
				<td>de 9 à 10,5</td>
			</tr>
		</tbody>
	</table>

	<h2 class="hoyster_title">Huitres
		<span>à la douzaine</span>
	</h2>



	<section class="hoyster">


	{% for product in products  %}
    {% if  product.category_id == 1 %}
		<article>
			<div>
				<img src="/assets/images/{{product.name|replace({"’":"", " ":"_","é":"e","(":"",")":""})|lower}}.png" alt="{{product.name}}">
				<h3>{{product.name}}</h3>
			</div>
			<p>
				{{product.description }}
			</p>

			<div>
				{{product.information|raw }}</div>
		</article>
        {% endif %}
	{% endfor %}
</section>

	<h2 class="hoyster_title">Moules
		<span>au Kilo</span>
	</h2>

	<section class="hoyster">
	{% for product in products  %}
    {% if  product.category_id == 2 %}
			<article>
				<div>
					<img src="/assets/images/{{product.name|replace({"’":"", " ":"_","é":"e","(":"",")":""})|lower}}.png" alt="{{product.name}}">
					<h3>{{product.name}}</h3>
				</div>
				<p>
					{{product.description }}
				</p>

			</article>
                    {% endif %}
		{% endfor %}
	</section>

</section>


<h2 class="titre-form">Envie de commander ?</h2>
<form action="/success" method="post">
	<div class="form-grid">
		<div class="questions-grid">
			<p>Veuillez remplir ce formulaire pour toute demande de devis.
			</p>

			<label for="lastname">Nom*</label>
			<input type="text" id="lastname" name="lastname" required>


			<label for="firstname">Prénom*</label>
			<input type="text" id="firstname" name="firstname" required>


			<label for="address">Adresse*</label>
			<input type="text" id="address" name="address" required>

			<label for="phone">Numéro de téléphone*</label>
			<input type="tel" id="phone" name="phone" required>

			<label for="email">Email*</label>
			<input type="email" id="email" name="email" required>
		</div>
		<div>
			<img class="form-image" src="/assets/images/image-form.jpg" alt="le port">

		</div>

	</div>

	<fieldset class="choix-section">
		<legend>Choix des produits*</legend>
		<div class="choix">
			<label for="fines-de-claires"><input type="checkbox" id="fines-de-claires" name="choix-produits[]" value="1">Fines de claires</label>
			<label for="speciales-de-claires"><input type="checkbox" id="speciales-de-claires" name="choix-produits[]" value="2">Spéciales de claires</label>
			<label for="label-rouge"><input type="checkbox" id="label-rouge" name="choix-produits[]" value="4">Label rouge</label>
			<label for="pousses-en-claires"><input type="checkbox" id="pousses-en-claires" name="choix-produits[]" value="3">Pousses en claires</label>
			<label for="moules-de-bouchot"><input type="checkbox" id="moules-de-bouchot" name="choix-produits[]" value="5">Moules de Bouchot</label>
			<label for="moules-d-irlande"><input type="checkbox" id="moules-d-irlande" name="choix-produits[]" value="6">Moules d'Irlande</label>
		</div>
	</fieldset>

	<label for="comment">Commentaires</label>
	<textarea id="commentaires" name="comment" rows="5"></textarea>
	<div class="livraison">
		<input type="checkbox" id="livraison" name="delivery" value="oui">
		<label for="livraison">Livraison (en supplément)</label>
	</div>

	<button class="demande-devis-button" type="submit">Demander un devis</button>
</form>{% endblock %}
