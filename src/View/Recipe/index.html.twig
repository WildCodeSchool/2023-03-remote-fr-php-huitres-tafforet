{% extends 'layout.html.twig' %}

{% block title %}Les recettes Tafforet | Des recettes délicieuses et originales
{% endblock %}

{% block meta_description %}
	Découvrez les meilleures recettes Tafforet, simples à réaliser et délicieuses. Retrouvez également des suggestions de vins pour accompagner vos plats.
{% endblock %}


{% block content %}
	<h1 class="TitleRecipe">Les recettes Tafforet</h1>
	<div class="img-recipe">
		<img src="/assets/images/image-recipe.png" alt="Image comportant un poisson dans une assiette">
	</div>
	<section class="recipes-container">
		{% for recipe in recipes %}
			<article>
				<h2>{{recipe.name}}</h2>
				<div class="content-container">
					<div class="text-content">
						<h3>Ingrédients
						</h3>
						{{recipe.content|raw }}</div>
					<div class="image-content">
						<img src="/assets/images/{{recipe.image1}}" alt="{{recipe.name}}">
						{% if recipe.image2 is not null %}
							<img src="/assets/images/{{recipe.image2}}" alt="{{recipe.name}}">
						{% endif %}

					</div>

				</div>

				<a href="#" role="button">Préparation : clique ici</a>


			</article>

		{% endfor %}
		<div class="recette">
			<h3>Suggestion de vin pour accompagner vos recettes
				<img src="/assets/images/vin.png" alt="Verre de vin">
			</h3>
		</div>

		<div class="list-vin">
			<h4>Vins blancs secs et fruités :</h4>
			<ul>

				<li>Muscadet</li>
				<li>Pouilly fumé</li>
				<li>Sancerre</li>
			</ul>
			<h4>Vin rouge :</h4>
			<ul>

				<li>Atlantique rouge</li>
				<li>Bordeaux rouge</li>
				<li>Bordeaux un brulhois rouge</li>
			</ul>
		</div>
	</section>
{% endblock %}
