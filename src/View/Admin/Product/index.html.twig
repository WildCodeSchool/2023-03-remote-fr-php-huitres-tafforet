{% extends 'Admin/layout.html.twig' %}

{% block content %}
	<h1>Liste des produits</h1>
	<a href="/product/add" class="add-admin">Ajouter un nouveau produit</a>
	<table role="grid">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Information</th>
				<th>Type</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{product.id}}</td>
					<td>
						{{product.name}}
					</td>
					<td>{{product.description|raw}}</td>
					<td>{{product.information|raw}}</td>
					<td>{{product.categoryType}}</td>
					<td>
						<a href="/product/edit?id={{product.id}}">Modifier</a>
					</td>
					<td>
                        <a href="/product/delete?id={{product.id}}">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
